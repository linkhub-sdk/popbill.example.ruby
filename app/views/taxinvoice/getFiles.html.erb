<div id="content">
  <p class="heading1">Response</p>
  <br/>
  <fieldset class="fieldset1">
    <legend><%= request.env['PATH_INFO'] %></legend>
    <% @Response.each_with_index do |fileInfo, index| %>
      <fieldset class="fieldset2">
        <legend>AttachedFile [<%= (index + 1) %>/<%= @Response.length %>]</legend>
        <ul>
          <li>serialNum : <%= fileInfo["serialNum"] %></li>
          <li>attachedFile : <%= fileInfo["attachedFile"] %></li>
          <li>displayName : <%= fileInfo["displayName"] %></li>
          <li>regDT : <%= fileInfo["regDT"] %></li>
        </ul>
      </fieldset>
    <% end %>
  </fieldset>
</div>
