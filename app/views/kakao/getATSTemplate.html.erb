<div id="content">
  <p class="heading1">Response</p>
  <br/>
  <fieldset class="fieldset1">
    <legend><%= request.env['PATH_INFO'] %></legend>
      <fieldset class="fieldset2">
        <legend>알림톡 템플릿 정보 확인</legend>
        <ul>
          <li>templateCode (템플릿 코드) : <%= @Response["templateCode"] %></li>
          <li>templateName (템플릿 제목) : <%= @Response["templateName"] %></li>
          <li>template (템플릿 내용) : <%= @Response["template"] %></li>
          <li>plusFriendID (카카오톡 채널 검색용 아이디) : <%= @Response["plusFriendID"] %></li>
          <li>ads (광고메시지) : <%= @Response["ads"] %></li>
          <li>appendix (부가메시지) : <%= @Response["appendix"] %></li>
          <% if @Response["btns"] %>
            <% @Response["btns"].each_with_index do |btnInfo, index| %>
              <fieldset>
                <legend>버튼 목록 [<%= (index + 1) %>/<%= @Response["btns"].length %>]</legend>
                <ul>
                  <li>n (버튼명) : <%= btnInfo["n"] %></li>
                  <li>t (버튼유형) : <%= btnInfo["t"] %></li>
                  <li>u1 (버튼링크1) : <%= btnInfo["u1"] %></li>
                  <li>u2 (버튼링크2) : <%= btnInfo["u2"] %></li>
                </ul>
              </fieldset>
            <% end %>
          <% end %>
        </ul>
      </fieldset>
  </fieldset>
</div>
