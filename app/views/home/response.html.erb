<div id="content">
  <p class="heading1">Response</p>
  <br/>
  <fieldset class="fieldset1">
    <legend><%= request.env['PATH_INFO'] %></legend>
    <ul>
      <li>code (응답코드) : <%= @Response["code"] %></li>
      <li>message (응답메시지) : <%= @Response["message"] %></li>

      <% if @Response["ntsConfirmNum"] %>
        <li>ntsConfirmNum (국세청승인번호) : <%= @Response["ntsConfirmNum"] %></li>
      <% end %>
      <% if @Response["confirmNum"] %>
        <li>confirmNum (국세청승인번호) : <%= @Response["confirmNum"] %></li>
      <% end %>
      <% if @Response["tradeDate"] %>
        <li>tradeDate (거래일자) : <%= @Response["tradeDate"] %></li>
      <% end %>
      <% if @Response["invoiceNum"] %>
        <li>invoiceNum (팝빌승인번호) : <%= @Response["invoiceNum"] %></li>
      <% end %>

    </ul>
  </fieldset>
</div>
